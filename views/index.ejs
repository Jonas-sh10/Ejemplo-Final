<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tu Proyecto</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Listado de Empresas</h1>
  <label for="seleccionarEmpresa">Seleccionar Empresa:</label>
  <select id="seleccionarEmpresa" name="seleccionarEmpresa">
    <% empresas.forEach(empresa => { %>
      <option value="<%= empresa.nombre %>"><%= empresa.nombre %></option>
    <% }); %>
  </select>

  <h1>Listado de Estudiantes</h1>
  <label for="seleccionarEstudiante">Seleccionar Estudiante:</label>
  <select id="seleccionarEstudiante" name="seleccionarEstudiante">
    <% estudiantes.forEach(estudiante => { %>
      <option value="<%= estudiante.nombre %>"><%= estudiante.nombre %></option>
    <% }); %>
  </select>

  <!-- Formulario para guardar transacci贸n -->
  <form id="formularioTransaccion" action="/guardarTransaccion" method="post">
    <!-- Campos ocultos para la empresa y el estudiante seleccionados -->
    <input type="hidden" id="empresaSeleccionada" name="empresaSeleccionada" value="">
    <input type="hidden" id="estudianteSeleccionado" name="estudianteSeleccionado" value="">

    <button type="button" onclick="guardarSeleccion()">Guardar Transacci贸n</button>
  </form>

  <script src="/script.js"></script>

  <script>
    // Funci贸n para guardar la selecci贸n antes de enviar el formulario
    function guardarSeleccion() {
      const empresaSeleccionada = document.getElementById('seleccionarEmpresa').value;
      const estudianteSeleccionado = document.getElementById('seleccionarEstudiante').value;

      // Asignar valores a los campos ocultos
      document.getElementById('empresaSeleccionada').value = empresaSeleccionada;
      document.getElementById('estudianteSeleccionado').value = estudianteSeleccionado;

      // Enviar el formulario
      document.getElementById('formularioTransaccion').submit();
    }
  </script>
</body>
</html>
